<resources>

    <!-- Base application theme. -->
    <style name="ActivityTheme.Light"
        parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">#000</item>
        <item name="thirdTextColor">@color/colorPrimary</item>
        <item name="secondaryTextColor">#919191</item>
        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="backgroundCardColor">@color/colorPrimary</item>
        <item name="dividerColor">#fff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="iconPlaceHolder">@drawable/ic_sort_black2_24dp</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="backgroundSplash">@color/colorAccent</item>
        <item name="backgroundListSettings">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="ActivityTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundListSettings">#2C3950</item>
        <item name="primaryTextColor">#fff</item>
        <item name="thirdTextColor">@color/colorAccent</item>
        <item name="secondaryTextColor">@color/colorAccent</item>
        <item name="backgroundColor">#212D41</item>
        <item name="backgroundCardColor">#2C3950</item>
        <item name="dividerColor">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">#141C29</item>
        <item name="backgroundSplash">#212D41</item>
        <item name="iconPlaceHolder">@drawable/ic_sort_black_24dp</item>
        <item name="android:statusBarColor">@color/colorBarBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
